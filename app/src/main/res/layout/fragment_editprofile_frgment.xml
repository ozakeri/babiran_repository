<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity"
    android:layoutDirection="ltr">


    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp">
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:id="@+id/main_layout"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            materialdesign:cardBackgroundColor="@color/white"
            android:layout_margin="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center_vertical">


                <ui_elements.MyEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/name"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:inputType="textPersonName"
                    android:textColor="@color/colorPrimaryDark" />

                <ui_elements.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="عنوان شخص‌:"
                    android:textSize="12sp"
                    android:gravity="center_vertical|right"
                    android:layout_weight="1"

                    android:textColor="@color/black"
                    android:layout_margin="5dp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            materialdesign:cardBackgroundColor="@color/white"
            android:layout_margin="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="4"
                android:gravity="center_vertical">


                <ui_elements.MyEditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/email"
                    android:layout_weight="2.1"
                    android:gravity="center_vertical"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorPrimaryDark" />

                <ui_elements.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/email_error"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="نادرست"
                    android:visibility="invisible"

                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_weight="0.9"
                    android:textColor="@color/error"
                    android:layout_margin="5dp" />

                <ui_elements.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="ایمیل :"
                    android:textSize="14sp"
                    android:gravity="center_vertical|right"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_margin="5dp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            materialdesign:cardBackgroundColor="@color/white"
            android:layout_margin="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center_vertical">


                <ui_elements.MyEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/address"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:inputType="textMultiLine"
                    android:textColor="@color/colorPrimaryDark" />


                <ui_elements.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="آدرس :"
                    android:textSize="14sp"
                    android:gravity="center_vertical|right"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_margin="5dp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            materialdesign:cardBackgroundColor="@color/white"
            android:layout_margin="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center_vertical">


                <ui_elements.MyEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/addressTwo"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:inputType="textPostalAddress"
                    android:textColor="@color/colorPrimaryDark" />


                <ui_elements.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="marquee"
                    android:inputType="textMultiLine"
                    android:singleLine="true"
                    android:text="آدرس دوم :"
                    android:textSize="14sp"
                    android:gravity="center_vertical|right"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_margin="5dp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            materialdesign:cardBackgroundColor="@color/white"
            android:layout_margin="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center_vertical">


                <ui_elements.MyEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/phone"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:inputType="phone"
                    android:text=""
                    android:textColor="@color/colorPrimaryDark" />

                <ui_elements.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="تلفن :"
                    android:textSize="14sp"
                    android:gravity="center_vertical|right"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_margin="5dp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            materialdesign:cardBackgroundColor="@color/white"
            android:layout_margin="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center_vertical">


                <ui_elements.MyEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/phoneTwo"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:inputType="phone"
                    android:textColor="@color/colorPrimaryDark" />

                <ui_elements.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="تلفن دوم :"
                    android:textSize="14sp"
                    android:gravity="center_vertical|right"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_margin="5dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/blueDark"
            android:layout_marginTop="4dp"
            >
            <ui_elements.MyTextView
                android:id="@+id/txt_search"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="ثبت"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:gravity="center"
                />


        </RelativeLayout>



    </LinearLayout>

    </ScrollView>

</RelativeLayout>
