<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:weightSum="1">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="1dp"
        card_view:cardUseCompatPadding="true">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/WHITE"

            android:gravity="right"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/new_pro_item_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left">

                    <ui_elements.MyTextView

                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:background="@color/blueDark"
                        android:gravity="center"
                        android:text="مخلفات"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </LinearLayout>

                <ui_elements.MyTextView
                    android:id="@+id/new_pro_txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="false"
                    android:layout_margin="2dp"
                    android:ellipsize="marquee"
                    android:gravity="right"
                    android:inputType="textMultiLine"
                    android:singleLine="true"
                    android:text="فروش آپارتمان یک خوابه"
                    android:textColor="#4c4c4c"
                    android:textSize="13sp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="2dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="right"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="3dp"
                            android:orientation="vertical"
                            android:padding="3dp">


                            <ui_elements.MyTextView
                                android:id="@+id/new_pro_txt_free_price"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"

                                android:ellipsize="marquee"
                                android:gravity="right"
                                android:text="قیمت اصلی"
                                android:textColor="@color/digikala_green_dark"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="3dp"
                            android:orientation="vertical"
                            android:padding="3dp">


                            <ui_elements.MyTextView
                                android:id="@+id/new_pro_txt_price"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:singleLine="true"
                                android:text="قیمت"
                                android:textColor="@color/digikala_green_light"
                                android:textSize="15sp"
                                android:textStyle="bold" />


                        </LinearLayout>


                    </LinearLayout>


                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_alignParentBottom="true">

                        <ui_elements.MyTextView
                            android:id="@+id/addToNew"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/add_to_basket"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                </RelativeLayout>


                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/new_pro_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logoloading" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>