<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    android:layout_margin="6dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/order_list_item_layout"
        android:padding="1dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_centerInParent="true"
        card_view:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:id="@+id/order_item_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_content">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="5dp"
                    android:id="@+id/order_img"
                    android:src="@drawable/logoloading"
                    android:scaleType="fitCenter"
                    android:layout_alignParentRight="true"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_toLeftOf="@+id/order_img"
                    android:id="@+id/linearLayout7">



                    <ui_elements.MyTextView
                        android:id="@+id/order_txt_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_alignParentLeft="true"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="فروش آپارتمان یک خوابه"
                        android:textSize="12sp"
                        android:gravity="right"
                        android:layout_margin="2dp"
                        android:textColor="#4c4c4c" />


                    <ui_elements.MyTextView
                        android:id="@+id/order_txt_description"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_alignParentLeft="true"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="توضیح کامل"
                        android:textSize="8sp"
                        android:textColor="#4c4c4c"
                        android:gravity="right"
                        android:layout_margin="2dp" />

                    <ui_elements.MyTextView
                        android:id="@+id/order_txt_price"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_alignParentLeft="true"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="قیمت"
                        android:textSize="14sp"
                        android:textColor="@color/greenDark"
                        android:gravity="right"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="15dp"
                        />

                    <ui_elements.MyTextView
                        android:id="@+id/order_txt_free_price"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:text="قیمت اصلی"
                        android:textSize="14sp"
                        android:textColor="@color/gray_dark"
                        android:gravity="right"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="5dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_toLeftOf="@+id/linearLayout7"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:gravity="center">


                    <ui_elements.MyTextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:text="تعداد :"
                        android:textAlignment="center"
                        />

                    <ui_elements.MyTextView
                        android:id="@+id/countValue"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:text="0 عدد "
                        android:textAlignment="center"
                        />

                </LinearLayout>




            </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>