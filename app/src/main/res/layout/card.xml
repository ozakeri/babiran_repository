<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_layout_main"
    android:layout_width="160dp"
    android:layout_height="300dp"
    android:gravity="center_horizontal"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <RelativeLayout
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:alpha="0.4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/productThumbnailImage"
                    android:layout_width="140dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:paddingTop="10dp"
                    android:scaleType="centerCrop" />
                <RelativeLayout
                    android:id="@+id/layout_percentage_discount"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:orientation="vertical"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="20dp"
                    android:rotation="-30"
                    android:background="@drawable/off_discount">

                    <ui_elements.MyTextView
                        android:id="@+id/txt_percentage_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_centerInParent="true"
                        android:text="sdsdf"/>

                </RelativeLayout>

                <ui_elements.MyTextView
                    android:id="@+id/card_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_below="@+id/productThumbnailImage"
                    android:textSize="12sp" />


                <ui_elements.MyTextView
                    android:id="@+id/card_price_dis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="5000"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/greenDark"
                    android:layout_below="@+id/card_name"
                    android:textSize="16sp" />

                <ui_elements.MyTextView
                    android:id="@+id/card_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:text="7000"
                    android:textColor="@color/gray_dark"
                    android:layout_below="@+id/card_price_dis"
                    android:textSize="12sp" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</RelativeLayout>