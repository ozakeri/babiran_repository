<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:background="@color/WHITE"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ui_elements.MyTextView
                android:id="@+id/txt_rc_rss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:inputType="textMultiLine"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_rc_rss_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="1sp"
                android:visibility="invisible" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_rc_rss"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:background="@drawable/logoloading" />

        <TextView
            android:id="@+id/tfghjkhjkhjkk"
            android:layout_width="0.000001dp"
            android:layout_height="0.000001dp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>