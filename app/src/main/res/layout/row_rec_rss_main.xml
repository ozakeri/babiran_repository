<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/WHITE"
            android:gravity="right"
            android:orientation="vertical">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_blog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/logoloading" />

            <ui_elements.MyTextView
                android:id="@+id/txt_rc_rss_mainn_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="3dp"
                android:inputType="textMultiLine"
                android:textColor="@color/digikala_red_light"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ui_elements.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="3dp"
                android:inputType="textMultiLine"
                android:text="(babiran.net منبع)"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/txt_rc_rss_mainn_link"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>