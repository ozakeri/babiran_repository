<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:weightSum="1"
    android:layoutDirection="ltr"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="1dp"
        card_view:cardUseCompatPadding="true">


    <LinearLayout
        android:id="@+id/new_pro_item_button"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:gravity="right"

        android:background="@color/WHITE"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ui_elements.MyTextView
                android:id="@+id/new_pro_txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="true"
                android:layout_margin="2dp"
                android:ellipsize="marquee"
                android:gravity="right"
                android:singleLine="true"
                android:inputType="textMultiLine"
                android:text="فروش آپارتمان یک خوابه"
                android:textColor="#4c4c4c"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                >


                <RelativeLayout
                    android:id="@+id/layout_percentage_discount"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_margin="3dp"
                    android:orientation="vertical"
                    android:padding="3dp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/off_discount">

                    <ui_elements.MyTextView
                        android:id="@+id/txt_percentage_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_centerInParent="true"
                        android:text="sdsdf"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:gravity="right"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="wrap_content"

                        android:layout_margin="3dp"
                        android:layout_alignParentRight="true"
                        android:padding="3dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ui_elements.MyTextView
                            android:id="@+id/new_pro_txt_free_price"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"

                            android:ellipsize="marquee"
                            android:gravity="right"
                            android:text="قیمت اصلی"
                            android:textColor="@color/digikala_green_dark"
                            android:textSize="16sp" />

                    </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"

                    android:layout_margin="3dp"
                    android:layout_alignParentRight="true"
                    android:padding="3dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">





                    <ui_elements.MyTextView
                        android:id="@+id/new_pro_txt_price"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="قیمت"
                        android:textStyle="bold"
                        android:textColor="@color/digikala_green_light"
                        android:textSize="16sp" />


                </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">

                    <ui_elements.MyTextView
                        android:id="@+id/addToNew"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/add_to_basket"
                        android:textSize="10sp" />

                </LinearLayout>


            </RelativeLayout>




        </LinearLayout>




        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:background="@drawable/border_product_images">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/new_pro_img"
                android:src="@drawable/logoloading"
                android:scaleType="fitCenter"
                android:layout_alignParentRight="true"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>
</LinearLayout>