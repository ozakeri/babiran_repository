<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    >


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="4dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        android:layout_height="200dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                >

                <ImageView
                    android:id="@+id/hrejkbgjg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_close" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18dp"
                    android:id="@+id/aefhtryjh"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="پیتزا پارک"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14dp"
                    android:id="@+id/sdfgbwtghkjd"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20:20"/>
                <TextView
                    android:textSize="14dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ساعت کاری :  "/>

                <TextView
                    android:layout_width="0.000000001dp"
                    android:layout_height="0.000000001dp"
                    android:textSize="0.00001sp"
                    android:visibility="invisible"
                    android:id="@+id/erbdvbds"/>


                <TextView
                    android:layout_width="0.000000001dp"
                    android:layout_height="0.000000001dp"
                    android:textSize="0.00001sp"
                    android:visibility="invisible"
                    android:id="@+id/adfbgdfhgrtyhrutj"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/sdgferthrthdr"
                    android:layout_width="0dp"
                    android:textColor="@color/gray_dark"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dfbsdfghsrth"
                    android:layout_width="0dp"
                    android:textColor="@color/gray_500"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>