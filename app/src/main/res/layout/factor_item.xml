<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardBackgroundColor="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/factor_list_item_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:padding="1dp"
        app:cardBackgroundColor="@color/white"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/item_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:layoutDirection="ltr"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <ui_elements.MyTextView
                        android:id="@+id/txt_freeprice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:ellipsize="marquee"
                        android:gravity="right"
                        android:text="قیمت"
                        android:textColor="@color/Black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ui_elements.MyTextView
                        android:id="@+id/txt_freeprice_label"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:ellipsize="marquee"
                        android:gravity="right"
                        android:text="هزینه پرداخت بدون تخفیف :"
                        android:textColor="#FF9B9797"
                        android:textSize="14sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:weightSum="1">


                    <ui_elements.MyTextView
                        android:id="@+id/txt_price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:text="قیمت"
                        android:textColor="@color/Black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ui_elements.MyTextView
                        android:id="@+id/txt_price_label"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:text="جمع پرداختی :"
                        android:textColor="#9b9797"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <ui_elements.MyTextView
                        android:id="@+id/txt_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:ellipsize="marquee"
                        android:gravity="right"
                        android:text="تاریخ"
                        android:textColor="@color/Black"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                    <ui_elements.MyTextView
                        android:id="@+id/txt_date_label"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:ellipsize="marquee"
                        android:gravity="right"
                        android:text="تاریخ پرداخت :"
                        android:textColor="#FF9B9797"
                        android:textSize="14sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <ui_elements.MyTextView
                        android:id="@+id/txt_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:ellipsize="marquee"
                        android:gravity="right"
                        android:text="نوع"
                        android:textColor="@color/Black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <ui_elements.MyTextView
                        android:id="@+id/txt_type_label"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:ellipsize="marquee"
                        android:gravity="right"
                        android:text="نوع پرداخت :"
                        android:textColor="#FF9B9797"
                        android:textSize="14sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_type_state_peygiri"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="0.5"
                        android:background="@color/blueDark"
                        android:text="پرداخت مجدد"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:visibility="visible" />

                    <ui_elements.MyTextView
                        android:id="@+id/txt_type_state_sefartesh"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:ellipsize="marquee"
                        android:gravity="right"
                        android:text="0"
                        android:textColor="@color/Black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ui_elements.MyTextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:ellipsize="marquee"
                        android:gravity="right"
                        android:text="شماره پیگیری  :"
                        android:textColor="#FF9B9797"

                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <ui_elements.MyTextView
                        android:id="@+id/txt_type_state_peygiri"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:ellipsize="marquee"
                        android:gravity="right"
                        android:text="0"
                        android:textColor="@color/Black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ui_elements.MyTextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:ellipsize="marquee"
                        android:gravity="right"
                        android:text="شماره سفارش  : "
                        android:textColor="#FF9B9797"

                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <ui_elements.MyTextView
                        android:id="@+id/txt_type_state"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:ellipsize="marquee"
                        android:gravity="right"
                        android:text="نوع"
                        android:textColor="@color/red"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ui_elements.MyTextView
                        android:id="@+id/txt_type_label_state"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:ellipsize="marquee"
                        android:gravity="right"
                        android:text="وضعیت سفارش :"
                        android:textColor="@color/colorPrimary"

                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <com.kofigyan.stateprogressbar.StateProgressBar
                        android:id="@+id/your_state_progress_bar_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:spb_animateToCurrentProgressState="true"
                        app:spb_checkStateCompleted="true"
                        app:spb_currentStateDescriptionColor="#006796"
                        app:spb_currentStateNumber="two"
                        app:spb_maxStateNumber="four"
                        app:spb_stateBackgroundColor="#BDBDBD"
                        app:spb_stateDescriptionColor="#808080"
                        app:spb_stateForegroundColor="#3578ca"
                        app:spb_stateNumberBackgroundColor="#808080"
                        app:spb_stateNumberForegroundColor="#eeeeee" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:background="@color/blue_semi_transparent_pressed"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="مشاهده ی اقلام "
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LnPiyk"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:background="@color/colorPrimary"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="مشخصات پیک"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>