<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border_dialog">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/red"
                android:gravity="center">

                <ui_elements.MyTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="4dp"
                    android:layout_toLeftOf="@+id/item_info"
                    android:text="پشتیبانی بابیران"
                    android:textColor="@color/white"
                    android:textSize="19sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <ui_elements.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_horizontal"
                    android:text="لطفا پیام های خود را از طریق پیام متنی و یا صوتی ارسال نمایید"
                    android:textColor="@color/blueDark"
                    android:textSize="14sp" />


                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="200dp"

                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".3"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/kjdnfgbkjn3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/sorush" />

                        <ui_elements.MyTextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="6dp"
                            android:layout_marginBottom="4dp"
                            android:layout_toLeftOf="@+id/item_info"
                            android:text="سروش"
                            android:textColor="@color/blueDark"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".3"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/kjdnfgbkjn1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/telegram" />

                        <ui_elements.MyTextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="6dp"
                            android:layout_marginBottom="4dp"
                            android:layout_toLeftOf="@+id/item_info"
                            android:text="تلگرام"
                            android:textColor="@color/blueDark"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".3"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/whats_up"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/whatsapp_icon" />

                        <ui_elements.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="6dp"
                            android:layout_marginBottom="4dp"
                            android:layout_toLeftOf="@+id/item_info"
                            android:text="واتس اپ"
                            android:textColor="@color/blueDark"
                            android:textSize="16sp" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <ui_elements.MyTextView
                    android:id="@+id/txt_close"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:text="بستن"
                    android:textStyle="bold"
                    android:textColor="@color/organizationColor"
                    android:layout_below="@+id/recycler_view"
                    android:layout_centerHorizontal="true"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"/>
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>





</LinearLayout>