<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/secure_dialog"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">

            <ui_elements.MyTextView
                android:id="@+id/txt_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="تعداد را مشخص کنید"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/txt_color"
                android:layout_below="@+id/secureIcon"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"/>

            <com.travijuu.numberpicker.library.NumberPicker
                android:id="@+id/numberPicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/countpicker"
                android:gravity="center"
                android:layout_marginTop="20dp"/>

            <ui_elements.MyTextView
                android:id="@+id/txt_action"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_background_corner"
                android:gravity="center"
                android:padding="5dp"
                android:text="تایید"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>