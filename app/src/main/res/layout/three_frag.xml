<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:background="@drawable/gradiant"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:layout_margin="1dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/nazarheadertwo"
                android:scaleType="fitXY"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/wizardthree"
                android:scaleType="centerInside"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="60dp"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            >
            <ui_elements.MyTextView
                android:id="@+id/firstTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="سفارشات خود را به سرعت "
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                android:gravity="center"
                />

            <ui_elements.MyTextView
                android:layout_below="@+id/firstTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="درب منزلتان تحویل بگیرید"
                android:textColor="@color/white"
                android:textSize="20sp"

                android:gravity="center"
                />


        </RelativeLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:scaleType="centerCrop"
        android:src="@drawable/smsbackground"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>