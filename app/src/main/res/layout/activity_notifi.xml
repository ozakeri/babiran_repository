<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    android:id="@+id/layout_notification_full_rl_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#161819"
        android:layout_centerInParent="true"
        android:layout_margin="30dp">


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:duplicateParentState="true">

            <ImageView
                android:id="@+id/layout_notification_full_imageview_big_picture"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:scaleType="centerCrop"
                android:layout_alignParentStart="true"
                android:duplicateParentState="true"
                />

            <ImageView
                android:id="@+id/layout_notification_full_imageview_picture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/layout_notification_full_imageview_close"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="75dp"
                android:duplicateParentState="true" android:contentDescription="TODO"/>

            <!--style="@style/TextPersianStyle"-->
            <!--android:textColor="@color/text_title_bg"-->

            <ImageView
                android:id="@+id/layout_notification_full_imageview_close"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_close"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            android:duplicateParentState="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/layout_notification_full_textview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/layout_notification_full_textview_text"
                android:layout_below="@+id/relativeLayout"
                android:duplicateParentState="true"
                android:gravity="center_vertical|center_horizontal"
                android:paddingLeft="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:paddingRight="5dp"

                android:textSize="28sp"
                android:textColor="#fafafa" />

            <TextView
                android:id="@+id/layout_notification_full_textview_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_alignEnd="@+id/layout_notification_full_imageview_big_picture"
                android:layout_alignRight="@+id/layout_notification_full_imageview_big_picture"
                android:layout_below="@+id/relativeLayout"
                android:duplicateParentState="true"
                android:gravity="center"
                android:paddingLeft="5dp"

                android:paddingRight="5dp"
                android:textSize="18sp"
                android:textColor="#fafafa" />

            <!--<com.iron.widget.button.IronButton-->
            <!--android:id="@+id/layout_notification_full_button"-->
            <!--style="@style/TextPersianStyle"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_margin="20dp"-->
            <!--android:background="@null"-->
            <!--android:padding="2dp"-->
            <!--android:textSize="20sp"/>-->

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_notification_full_footer"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:duplicateParentState="true">

            <TextView
                android:id="@+id/layout_notification_full_textview_download_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical|center_horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="28sp"

                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:textColor="#fafafa" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>

