<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:layoutDirection="ltr"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:id="@+id/basket_list_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp">

        <RelativeLayout
            android:id="@+id/deletebasket"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp">

            <ui_elements.MyTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/delete_from_basket"
                android:gravity="center" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/item_basket"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/deletebasket"
            android:alpha="0.8">


            <ui_elements.MyTextView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="2dp"
                android:gravity="center"
                android:textSize="14sp" />

            <ui_elements.MyTextView
                android:id="@+id/item_discount"
                android:layout_width="28dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="10%"
                android:textColor="@color/green"
                android:visibility="gone" />


            <RelativeLayout
                android:id="@+id/item_content_basket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/item_discount">

                <androidx.cardview.widget.CardView
                    android:id="@+id/layout_img_basket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:background="@drawable/border_product_images"
                    android:scaleType="fitCenter">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_basket"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/logoloading" />

                        <ui_elements.MyTextView
                            android:id="@+id/item_count"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:layout_margin="5dp"
                            android:textColor="@color/WHITE"
                            android:background = "@drawable/circle_count_background"
                            android:textSize="14sp"
                            android:text="599" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>



                <LinearLayout
                    android:id="@+id/linearLayout7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/layout_img_basket"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ui_elements.MyTextView
                        android:id="@+id/txt_name_basket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:ellipsize="marquee"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="فروش آپارتمان یک خوابه"
                        android:textColor="#4c4c4c"
                        android:textSize="16sp" />


                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blue_semi_transparent_pressed"
            android:layout_below="@+id/item_basket"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>